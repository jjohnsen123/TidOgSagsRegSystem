<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.TidsregistreringPage"
             Title="TidsregistreringPage">
    <StackLayout Padding="20">
        <Label Text="Tidsregistrering" FontSize="Large" FontAttributes="Bold" />
        <CollectionView x:Name="TidsregListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding StartTidspunkt, StringFormat='Start: {0:dd/MM/yyyy HH:mm}'}" />
                        <Label Text=" - " />
                        <Label Text="{Binding SlutTidspunkt, StringFormat='Slut: {0:dd/MM/yyyy HH:mm}'}" />
                        <Label Text="{Binding ArbejdedeTimer, StringFormat='Total: {0:F2} timer'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="TilfÃ¸j Tidsregistrering" Clicked="AddTidsregClicked" />
    </StackLayout>
</ContentPage>