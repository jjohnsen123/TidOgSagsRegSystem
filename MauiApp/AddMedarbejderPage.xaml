<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.AddMedarbejderPage"
             Title="Tilføj Medarbejder">
    <StackLayout Padding="20">
        <Entry x:Name="NavnEntry" Placeholder="Navn" />
        <Entry x:Name="InitialerEntry" Placeholder="Initialer" />
        <Entry x:Name="CprEntry" Placeholder="CPR-nummer" Keyboard="Numeric" />

        <Label Text="Vælg Afdeling" FontAttributes="Bold" />
        <Picker x:Name="AfdelingPicker" Title="Afdeling">
            <!-- Afdelinger vil blive indlæst programmatisk -->
        </Picker>

        <Button Text="Gem" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>