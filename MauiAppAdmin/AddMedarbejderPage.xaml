<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAdmin.AddMedarbejderPage"
             Title="Tilføj Medarbejder">
    <StackLayout Margin="40">
        <Entry x:Name="NavnEntry" Placeholder="Navn" />
        <Entry x:Name="InitialerEntry" Placeholder="Initialer" />
        <Entry x:Name="CprEntry" Placeholder="CPR-nummer" Keyboard="Numeric" />

        <Label Text="Vælg Afdeling" FontAttributes="Bold" />
        <Picker x:Name="AfdelingPicker" Title="Afdeling" />
        
        <Button Text="Gem" Clicked="OnSaveClicked" Margin="0,10,0,10"/>
        <Button Text="Tilbage" Clicked="OnCancelClicked" />
    </StackLayout>
    
</ContentPage>