<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAdmin.AddAfdelingPage"
             Title="Tilføj Afdeling">

    <VerticalStackLayout Margin="40">
        
        <Label Text="Afdelingens Navn:" FontSize="Medium"/>
        <Entry x:Name="NavnEntry" Placeholder="Indtast afdelingens navn"/>
        <Button Text="Tilføj Afdeling" Clicked="OnAddAfdelingClicked" Margin="0,10,0,10"/>
        
        <Button Text="Tilbage" Clicked="OnCancelClicked"/>
    </VerticalStackLayout>
</ContentPage>